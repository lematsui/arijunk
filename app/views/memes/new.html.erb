<div class="container">
	<h3>Upload a meme!</h3>
	<%= simple_form_for @meme do |f| %>
		<%= f.input :photo %>
  	<%= f.input :photo_cache, as: :hidden %>
  	<%= f.input :title %>
  	<%= f.input :caption %>
  	<%= f.input :tags, as: :select, collection: Tag.order(:name), label_method: :name, input_html: {           multiple: true} %>
  	<%= f.submit %>
	<% end %>
</div>

